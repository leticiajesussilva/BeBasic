<!-- header -->
<%- include('partials/header.ejs') %>

<body>

    <!-- HEADER -->
    <%- include('partials/menu.ejs') %>

    <main>
        <div class="containerbackground_login">
            <section class="login_content_page">
                <div class="login_wrap">
                    <div class="login_title">
                        <h1 class="login_title_h1">Faça seu Login
                        </h1>
                    </div>

                    <div class="login">
                        <form action="/login" method="post">
                            <label for="email"></label>
                            <input type="email" name="email" required placeholder="Digite seu email" name="email" id="email"/>
                            <br/>
                            <label for="senha"></label>
                            <input type="senha" required placeholder="Digite sua senha" name="senha" id="senha"/>
                            <br/>
                            <div class="checkbox">
                                <input type="checkbox" id="conectado" name="conectado" value="yes"/>
                                <p class="paragraph_keepmeconected">Mantenha-me conectado</p>
                            </div>
                            <br/>
                            <button class="btn_login" type="submit">CONTINUAR</button>
                            <br/>
                            <div>
                                <p>
                                    <small>
                                        <a href="/resetpassword">Esqueceu sua senha?
                                        </a>
                                    </small>
                                </p>
                                <br/>
                                <p>
                                    <small>Ainda não tem conta?
                                        <a href="/registration">
                                            Clique aqui
                                        </a>
                                        <br/>
                                    </small>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- FOOTER -->
    <%- include('partials/footer.ejs') %>

</body></html>
